{% extends 'base.html.twig' %}

{% block title %}Liste des Sessions{% endblock %}

{% block body %}
<div class="bloc" >
<h1>Liste des Sessions</h1>

 

 <table border="5">
    <thead>
        <tr>

            <th>N°</th>
            <th>Session</th>
            <th>Nombre de places théoriques</th>
            <th>Nombre de stagiaires inscrits</th>
            <th>Nombre de places restants</th>
            <th>Nombre de programmes</th>
           
                    
        </tr>
    </thead>
    <tbody>
        {% for session in session %}
            <tr>
                <td>{{ session.Id }}</td>
                <td><a href="{{ path('show_session', {'id': session.id}) }}">{{ session.session  }}</a>
                <a class ="Edit" href="{{ path('edit_session', {'id': session.id})}}">Edit</a></td>          
                <td>{{ session.nbPlace }}</td> 
                <td>{{ session.stagiaires|length }}</td> 
                <td>{{ session.nbPlace  - session.stagiaires|length}}</td>
                <td>{{ session.programmes|length}}</td>
            </tr>

        {% endfor %}
        

    

    </table>
</div>

{% endblock %}
